<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Bonus Security Rules -->
        <record id="hr_bonus_rule" model="ir.rule">
            <field name="name">Bonus User</field>
            <field name="model_id" ref="model_hr_bonus"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="hr_bonus_rule_manager" model="ir.rule">
            <field name="name">Bonus Manager</field>
            <field name="model_id" ref="model_hr_bonus"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
        </record>

    </data>
</odoo>
